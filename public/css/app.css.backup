/* Global Styles */
:root {
    --primary: #667eea;
    --primary-dark: #5568d3;
    --secondary: #764ba2;
    --success: #11998e;
    --danger: #f5576c;
    --warning: #f093fb;
    --info: #4facfe;
    --light: #f8f9fa;
    --dark: #2d3748;
    --border-radius: 16px;
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
    --shadow-md: 0 4px 20px rgba(0,0,0,0.1);
    --shadow-lg: 0 8px 30px rgba(0,0,0,0.15);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    min-height: 100vh;
    color: var(--dark);
    overflow-x: hidden;
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    z-index: -1;
}

.navbar-brand {
    font-weight: 700;
    font-size: 1.5rem;
    letter-spacing: -0.5px;
}

/* Container */
.container-fluid {
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .container-fluid {
        padding: 2rem;
    }
}

/* Print Styles */
@media print {
    .admin-sidebar,
    .btn,
    .table-actions {
        display: none;
    }
    
    body {
        background: white;
    }
    
    .admin-content {
        box-shadow: none;
    }
}

/* Admin Dashboard Styles */
.stats-card {
    background: white;
    border-radius: var(--border-radius);
    transition: var(--transition);
    box-shadow: var(--shadow-sm);
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
}

.stats-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
}

.stats-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
}

.stats-card h6 {
    color: #6c757d;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
}

.stats-card h3 {
    color: var(--dark);
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
}

.stats-card i {
    color: var(--primary);
    opacity: 0.2;
    transition: var(--transition);
}

.stats-card:hover i {
    opacity: 0.3;
    transform: scale(1.1);
}

.stats-card.success::before {
    background: linear-gradient(90deg, var(--success), #38ef7d);
}

.stats-card.success i {
    color: var(--success);
}

.stats-card.warning::before {
    background: linear-gradient(90deg, var(--warning), var(--danger));
}

.stats-card.warning i {
    color: var(--danger);
}

.stats-card.info::before {
    background: linear-gradient(90deg, var(--info), #00f2fe);
}

.stats-card.info i {
    color: var(--info);
}

.admin-sidebar {
    background: white;
    min-height: calc(100vh - 100px);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    padding: 1.5rem !important;
    position: sticky;
    top: 2rem;
}

.admin-sidebar h6 {
    color: #6c757d;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
}

.admin-content {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    min-height: 500px;
    animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.nav-pills .nav-link {
    color: #6c757d;
    border-radius: 12px;
    margin-bottom: 0.5rem;
    padding: 0.875rem 1.25rem;
    font-weight: 500;
    transition: var(--transition);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
}

.nav-pills .nav-link i {
    font-size: 1.125rem;
    transition: var(--transition);
}

.nav-pills .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background: linear-gradient(180deg, var(--primary), var(--secondary));
    transform: scaleY(0);
    transition: var(--transition);
}

.nav-pills .nav-link.active {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    transform: translateX(8px);
}

.nav-pills .nav-link.active::before {
    transform: scaleY(1);
}

.nav-pills .nav-link:hover:not(.active) {
    background-color: #f8f9fa;
    transform: translateX(5px);
    color: var(--primary);
}

.nav-pills .nav-link:hover:not(.active)::before {
    transform: scaleY(1);
}

.table-actions {
    white-space: nowrap;
}

.table-actions .btn {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    margin: 0 0.125rem;
}

.upload-zone {
    border: 3px dashed #dee2e6;
    border-radius: var(--border-radius);
    padding: 3rem 2rem;
    text-align: center;
    transition: var(--transition);
    cursor: pointer;
    background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
    position: relative;
    overflow: hidden;
}

.upload-zone::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(102, 126, 234, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.upload-zone:hover::before {
    width: 500px;
    height: 500px;
}

.upload-zone:hover {
    border-color: var(--primary);
    background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
    transform: scale(1.02);
}

.upload-zone.dragover {
    border-color: var(--primary);
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
}

.upload-zone i {
    position: relative;
    z-index: 1;
}

.upload-zone h4,
.upload-zone h5,
.upload-zone p {
    position: relative;
    z-index: 1;
}

.category-selector {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: var(--shadow-sm);
    border: 2px solid #e9ecef;
    transition: var(--transition);
}

.category-selector:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--primary);
}

.category-selector h6 {
    color: var(--dark);
    font-weight: 700;
    margin-bottom: 1rem;
    font-size: 1rem;
}

.form-label {
    font-weight: 600;
    color: var(--dark);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

.form-control,
.form-select {
    border-radius: 10px;
    border: 2px solid #e9ecef;
    padding: 0.75rem 1rem;
    transition: var(--transition);
    font-size: 0.9375rem;
}

.form-control:focus,
.form-select:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
    outline: none;
}

.table-responsive {
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
}

.table {
    margin-bottom: 0;
}

.table thead {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
}

.table thead th {
    border: none;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.8125rem;
    letter-spacing: 0.5px;
    padding: 1rem;
    white-space: nowrap;
}

.table tbody tr {
    transition: var(--transition);
}

.table tbody tr:hover {
    background-color: #f8f9fa;
    transform: scale(1.01);
}

.table tbody td {
    vertical-align: middle;
    padding: 1rem;
}

.badge {
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.75rem;
    letter-spacing: 0.3px;
}

.btn {
    border-radius: 10px;
    font-weight: 600;
    padding: 0.625rem 1.25rem;
    transition: var(--transition);
    border: none;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:hover::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

.btn-danger {
    background: linear-gradient(135deg, var(--danger) 0%, #dc3545 100%);
    box-shadow: 0 4px 15px rgba(245, 87, 108, 0.3);
}

.btn-danger:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(245, 87, 108, 0.4);
}

.btn-sm {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
}

.modal-content {
    border-radius: var(--border-radius);
    border: none;
    box-shadow: var(--shadow-lg);
}

.modal-header {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: var(--border-radius) var(--border-radius) 0 0;
    border: none;
}

.modal-title {
    font-weight: 700;
}

.modal-footer {
    border: none;
    padding: 1.5rem;
}

.card {
    border-radius: var(--border-radius);
    border: none;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-5px);
}

.card-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: none;
    border-radius: var(--border-radius) var(--border-radius) 0 0;
    font-weight: 700;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .stats-card h3 {
        font-size: 1.75rem;
    }
}

@media (max-width: 992px) {
    .admin-sidebar {
        position: relative;
        top: 0;
        min-height: auto;
        margin-bottom: 1.5rem;
    }
    
    .nav-pills .nav-link {
        padding: 0.75rem 1rem;
    }
    
    .table thead th {
        font-size: 0.75rem;
        padding: 0.75rem;
    }
    
    .table tbody td {
        padding: 0.75rem;
        font-size: 0.875rem;
    }
}

@media (max-width: 768px) {
    body {
        font-size: 14px;
    }
    
    .container-fluid {
        padding: 1rem 0.5rem;
    }
    
    .admin-sidebar {
        border-radius: var(--border-radius);
        padding: 1rem !important;
    }
    
    .admin-sidebar h6 {
        font-size: 0.7rem;
        margin-bottom: 1rem;
    }
    
    .nav-pills .nav-link {
        padding: 0.625rem 0.875rem;
        font-size: 0.875rem;
        margin-bottom: 0.375rem;
    }
    
    .nav-pills .nav-link i {
        font-size: 1rem;
    }
    
    .stats-card {
        margin-bottom: 1rem;
    }
    
    .stats-card h6 {
        font-size: 0.75rem;
    }
    
    .stats-card h3 {
        font-size: 1.5rem;
    }
    
    .stats-card i {
        font-size: 1.5rem !important;
    }
    
    .admin-content {
        padding: 1rem !important;
    }
    
    .admin-content h3 {
        font-size: 1.25rem;
    }
    
    .category-selector {
        padding: 1rem;
    }
    
    .category-selector h6 {
        font-size: 0.875rem;
    }
    
    .upload-zone {
        padding: 2rem 1rem;
    }
    
    .upload-zone i {
        font-size: 2.5rem !important;
    }
    
    .upload-zone h4,
    .upload-zone h5 {
        font-size: 1rem;
    }
    
    .table-responsive {
        font-size: 0.8125rem;
    }
    
    .table thead th {
        font-size: 0.7rem;
        padding: 0.625rem 0.5rem;
    }
    
    .table tbody td {
        padding: 0.625rem 0.5rem;
        font-size: 0.8125rem;
    }
    
    .table-actions .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        margin: 0.125rem;
    }
    
    .btn {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }
    
    .modal-dialog {
        margin: 0.5rem;
    }
}

@media (max-width: 576px) {
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 1rem;
    }
    
    .d-flex.justify-content-between > * {
        width: 100%;
    }
    
    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .btn-group .btn {
        width: 100%;
    }
    
    .category-selector .row {
        gap: 0.75rem;
    }
    
    .upload-zone {
        padding: 1.5rem 0.75rem;
    }
    
    .table {
        font-size: 0.75rem;
    }
    
    .badge {
        font-size: 0.65rem;
        padding: 0.375rem 0.5rem;
    }
}

/* Scrollbar Styling */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, var(--primary-dark), var(--secondary));
}

/* Loading Animation */
@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

.loading {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* Utility Classes */
.text-gradient {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.shadow-hover {
    transition: var(--transition);
}

.shadow-hover:hover {
    box-shadow: var(--shadow-lg);
}

.min-vh-75 {
    min-height: 75vh;
}

/* Modern Navbar */
.modern-navbar {
    background: rgba(255, 255, 255, 0.1) !important;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modern-navbar .navbar-brand {
    font-weight: 700;
    transition: var(--transition);
}

.modern-navbar .brand-icon {
    width: 40px;
    height: 40px;
    background: white;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    transition: var(--transition);
}

.modern-navbar .navbar-brand:hover .brand-icon {
    transform: rotate(360deg) scale(1.1);
}

.modern-navbar .brand-text {
    color: white;
    font-size: 1.25rem;
}

.modern-navbar .nav-link {
    color: rgba(255, 255, 255, 0.9) !important;
    font-weight: 500;
    padding: 0.5rem 1rem !important;
    border-radius: 8px;
    transition: var(--transition);
    margin: 0 0.25rem;
}

.modern-navbar .nav-link:hover {
    background: rgba(255, 255, 255, 0.2);
    color: white !important;
}

/* Hero Section */
.hero-section {
    position: relative;
    overflow: hidden;
}

.hero-content {
    animation: fadeInUp 1s ease;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hero-icon {
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-20px);
    }
}

.hero-icon i {
    color: white;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
}

.hero-section h1 {
    color: white;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.hero-section .btn-light {
    background: white;
    color: var(--primary);
    font-weight: 600;
    border: none;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.hero-section .btn-light:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.3);
}

.hero-section .btn-outline-light {
    border: 2px solid white;
    color: white;
    font-weight: 600;
}

.hero-section .btn-outline-light:hover {
    background: white;
    color: var(--primary);
    transform: translateY(-3px);
}

/* Features Section */
.features-section {
    background: white;
}

.feature-card {
    background: white;
    border-radius: var(--border-radius);
    padding: 2rem 1.5rem;
    transition: var(--transition);
    box-shadow: var(--shadow-sm);
    border: 2px solid transparent;
    height: 100%;
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
}

.feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition);
}

.feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
}

.feature-icon i {
    color: white;
}

/* Info Cards */
.info-card {
    background: white;
    border-radius: var(--border-radius);
    padding: 2rem;
    box-shadow: var(--shadow-md);
    height: 100%;
    border: 2px solid #e9ecef;
    transition: var(--transition);
}

.info-card:hover {
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
}

.info-card h3 {
    color: var(--dark);
    font-weight: 700;
}

.quick-start-item {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 12px;
    margin-bottom: 1rem;
    transition: var(--transition);
}

.quick-start-item:hover {
    background: #e9ecef;
    transform: translateX(5px);
}

.step-number {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    flex-shrink: 0;
}

.quick-start-item code {
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    color: var(--primary);
    font-weight: 600;
}

.system-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 12px;
    transition: var(--transition);
}

.system-info-item:hover {
    background: #e9ecef;
    transform: scale(1.05);
}

.system-info-item i {
    font-size: 1.5rem;
    color: var(--primary);
    width: 40px;
    text-align: center;
}

.system-info-item div {
    display: flex;
    flex-direction: column;
}

.system-info-item strong {
    font-size: 0.875rem;
    color: #6c757d;
    font-weight: 600;
}

.system-info-item span {
    font-size: 1rem;
    color: var(--dark);
    font-weight: 600;
}

/* Login Page */
.login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
}

.login-card {
    background: white;
    border-radius: var(--border-radius);
    padding: 3rem 2.5rem;
    box-shadow: var(--shadow-lg);
    animation: fadeInUp 0.6s ease;
}

.login-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: pulse 2s ease-in-out infinite;
}

.login-icon i {
    color: white;
}

.login-header h2 {
    color: var(--dark);
}

.login-card .input-group-text {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border: none;
    color: white;
    border-radius: 10px 0 0 10px;
}

.login-card .form-control {
    border-left: none;
    border-radius: 0 10px 10px 0;
}

.login-card .form-control:focus {
    border-left: none;
}

.login-footer .alert {
    background: linear-gradient(135deg, #e0f7fa 0%, #e1f5fe 100%);
    border: 2px solid #b2ebf2;
    border-radius: 10px;
}

/* Responsive for Home & Login */
@media (max-width: 768px) {
    .hero-section h1 {
        font-size: 2rem;
    }
    
    .hero-section .lead {
        font-size: 1rem;
    }
    
    .hero-icon i {
        font-size: 3rem !important;
    }
    
    .feature-card {
        padding: 1.5rem 1rem;
    }
    
    .feature-icon {
        width: 60px;
        height: 60px;
    }
    
    .feature-icon i {
        font-size: 1.5rem !important;
    }
    
    .info-card {
        padding: 1.5rem;
    }
    
    .quick-start-item {
        padding: 1rem;
    }
    
    .system-info-grid {
        grid-template-columns: 1fr;
    }
    
    .login-card {
        padding: 2rem 1.5rem;
    }
    
    .login-icon {
        width: 80px;
        height: 80px;
    }
    
    .login-icon i {
        font-size: 2.5rem !important;
    }
}